<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_RV_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/settings_gallery_icon_remove"
        android:layout_width="@dimen/settings_RV_picture_size"
        android:layout_height="@dimen/settings_RV_picture_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:paddingVertical="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_remove"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/settings_gallery_picture"
        android:layout_width="@dimen/settings_RV_picture_size"
        android:layout_height="@dimen/settings_RV_picture_size"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription,MissingDefaultResource"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/settingsGalleryFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_400"
        android:maxLines="1"
        android:textColor="@color/text"
        android:textSize="@dimen/paragraph_textsize"
        tools:text="364648936.jpeg" />
</LinearLayout>

