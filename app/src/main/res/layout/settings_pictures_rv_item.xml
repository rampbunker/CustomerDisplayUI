<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_RV_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/settings_gallery_icon_remove"
        style="@style/settingsRVItemImage"
        android:layout_width="@dimen/settings_RV_picture_size"
        android:layout_height="@dimen/settings_RV_picture_size"
        android:layout_marginStart="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_remove"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/settings_gallery_picture"
        style="@style/settingsRVItemImage"
        android:layout_width="@dimen/settings_RV_picture_size"
        android:layout_height="@dimen/settings_RV_picture_size"
        android:layout_marginHorizontal="16dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription,MissingDefaultResource"
        tools:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/settingsGalleryFileName"
        style="@style/settingsRVItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="364648936.jpeg" />
</LinearLayout>

